<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_black">

        <ImageView
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:src="@mipmap/home_side" />

        <ImageView
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:src="@mipmap/home_search" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="系列"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <FrameLayout
            android:id="@+id/main_home_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/color_black">

            <TextSwitcher
                android:id="@+id/main_first_page_new"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginRight="120dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="@color/color_gray_d"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/color_gray_d"
                    android:textSize="15sp" />
            </TextSwitcher>

            <TextView
                android:id="@+id/main_first_page_channel"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:text="频道"
                android:textColor="@color/color_gray_9"
                android:textSize="15sp" />

            <View
                android:id="@+id/main_first_page_indicator"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:background="@color/color_white" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>